
<%# @cpus = cpu.paginate(:page => params[:page]) %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">CPU Details</h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <table class="table sortable">
        <thead>
        <th><center>CPU Code</center></th>
        <th><center>HardDisk</center></th>
        <th><center>Brand Name</center></th>
        <th><center>CPU Processor</center></th>
        <th><center>RAM</center></th>
        <th><center>Cd Rom</center></th>
        <th><center>USB Port</center></th>
        <th><center>VGA Card</center></th>

        <th class="sorttable_nosort"><center>Edit/Delete</center></th>
        </thead>

        <% @cpus.each do |cpu| %>
            <tr>
              <td><center><%= link_to cpu.cpu_code, cpu %></td></center>
              <td><center><%= cpu.harddisk %></td></center>
              <td><center><%= cpu.brand_name %></center></td>
              <td><center><%= cpu.cpu_processor %></center></td>
              <td><center><%= cpu.ram %></center></td>
              <td><center><%= cpu.cd_rom %></center></td>
              <td><center><%= cpu.usb_port %></center></td>
              <td><center><%= cpu.vga_card %></center></td>

              <td><center><%= link_to '', edit_cpu_path(cpu), :class=>"fa fa-edit" %> |  <%= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), cpu, data: {confirm: 'Are you sure you want to delete this item?'}, method: :delete %></center>
              </td>
            </tr>
        <% end -%>

        <tfoot>
        <tr>
          <td><b>Total CPU</b></td>
          <td></td>
          <td><center><%= @cpus.count if @cpus%></center></td>
          <td></td>
          <td><center><%#= number_to_currency(@cpus.map{|item| item.value}.reduce(0, :+,))%></center></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>




        </tr>
        </tfoot>

      </table>
    </div>

    <center>
      <div class="pagination">
        <div class="page_info">
          <%#= page_entries_info @cpus %>
        </div>
        <%#= will_paginate @cpus, renderer: BootstrapPagination::Rails %>
      </div>
    </center>

  </div>
</div>
