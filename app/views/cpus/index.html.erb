<style>
  .even {
    background: white;
  }

  .odd {
    background: #EEF7FB;
  }
</style>
<%# @cpus = cpu.paginate(:page => params[:page]) %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">CPU Details</h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <table class="table sortable">
        <thead>
        <th>
          <center>CPU Code</center>
        </th>
        <th>
          <center>HardDisk</center>
        </th>
        <th>
          <center>Brand Name</center>
        </th>
        <th>
          <center>CPU Processor</center>
        </th>
        <th>
          <center>RAM</center>
        </th>
        <th>
          <center>Cd Rom</center>
        </th>
        <th>
          <center>USB Port</center>
        </th>
        <th>
          <center>VGA Card</center>
        </th>

        <th class="sorttable_nosort">
          <center>Edit/Delete</center>
        </th>
        </thead>

        <% @cpus.each do |cpu| %>
            <tr class="<%= cycle("even", "odd") %>">
              <td>
                <center><%= link_to cpu.cpu_code, cpu %></td>
              </center>
              <td>
                <center><%= cpu.harddisk %></td>
              </center>
              <td>
                <center><%= cpu.brand_name %></center>
              </td>
              <td>
                <center><%= cpu.cpu_processor %></center>
              </td>
              <td>
                <center><%= cpu.ram %></center>
              </td>
              <td>
                <center><%= cpu.cd_rom %></center>
              </td>
              <td>
                <center><%= cpu.usb_port %></center>
              </td>
              <td>
                <center><%= cpu.vga_card %></center>
              </td>

              <td>
                <center><%= link_to '', edit_cpu_path(cpu), :class => "fa fa-edit" %>
                  |  <%= link_to content_tag(:i, nil, :class => "fa fa-trash-o"), cpu, data: {confirm: 'Are you sure you want to delete this item?'}, method: :delete %></center>
              </td>
            </tr>
        <% end -%>

        <tfoot>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tfoot>

      </table>
    </div>

    <div class="container">
      <h2>Total Summary CPU</h2>
      <p>Summarized detail of all the CPU currently being used by the employees.</p><br>
      <div class="panel-group">

        <div class="row">

          <div class="col-xs-6 col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading blue">Total CPU
                =<strong> <%= Cpu.where("cpu_processor is NOT NULL").count %></strong></div>
              <div class="panel-body">

                Core 2 Duo = <%= Cpu.where(cpu_processor: "Core 2 Duo").count %><br>
                Core 2 Quad = <%= Cpu.where(cpu_processor: "Core 2 Quad").count %><br>
                i3 Intel = <%= Cpu.where(cpu_processor: "i3 Intel").count %><br>
                i5 Intel = <%= Cpu.where(cpu_processor: "i5 Intel").count %><br>
                i7 Intel = <%= Cpu.where(cpu_processor: "i7 Intel").count %><br>

              </div>
              <!--<div class="panel-body"> </div>-->
            </div>
          </div>

          <div class="col-xs-6 col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading blue">Total CPU Brands = <strong><%= Cpu.count %></strong></div>
              <div class="panel-body">Dell = <%= Cpu.where(brand_name: "Dell").count%> <br>
                Transource = <%= Cpu.where(brand_name: "Transource").count%> <br>
                Thinkcentre = <%= Cpu.where(brand_name: "Think Centre").count%> <br>
                HP = <%= Cpu.where(brand_name: "HP").count%> <br>
                Acer = <%= Cpu.where(brand_name: "Acer").count%> <br>
                WorkStation = <%= Cpu.where(brand_name: "Work Station").count%> <br>
              </div>
            </div>
          </div>

          <div class="col-xs-6 col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading blue">Hard Disk =
                <strong><%= Cpu.where("harddisk is NOT NULL").count %></strong></div>
              <div class="panel-body">80 GB  = <%= Cpu.where(harddisk: "80 GB").count %>
                <br>
                160 GB  = <%= Cpu.where(harddisk: "160 GB").count %>
                <br>
                256 GB  = <%= Cpu.where(harddisk: "256 GB").count %>
                <br>
                512 GB  = <%= Cpu.where(harddisk: "512 GB").count %>
              </div>
            </div>
          </div>



        </div>
        <br>
        <div class="row">
          <div class="col-xs-6 col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading blue">Total Ram's = <strong><%= Cpu.where("ram is NOT NULL").count %></strong></div>
              <div class="panel-body">2 GB = <%= Cpu.where(ram: "2 GB").count%> <br>
                3 GB = <%= Cpu.where(ram: "3 GB").count%> <br>
                4 GB = <%= Cpu.where(ram: "4 GB").count%> <br>
                6 GB = <%= Cpu.where(ram: "6 GB").count%> <br>
                8 GB = <%= Cpu.where(ram: "8 GB").count%> <br>
                10 GB = <%= Cpu.where(ram: "10 GB").count%>


              </div>
            </div>
          </div>
          <div class="col-xs-6 col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading blue">VGA Card
                <strong></strong></div>
              <div class="panel-body">
                Cards = <%= Cpu.where(vga_card: "YES").count %>
              </div>
            </div>
          </div>



        </div>


      </div>
    </div>
    <center>
      <div class="pagination">
        <div class="page_info">
          <%#= page_entries_info @cpus %>
        </div>
        <%#= will_paginate @cpus, renderer: BootstrapPagination::Rails %>
      </div>
    </center>

  </div>
</div>
